<div class="container mx-auto px-4 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-4">Báo cáo chi tiêu</h1>

    <!-- Date Range Form -->
    <div class="bg-white rounded-lg shadow p-6 mb-6">
      <%= form_with url: reports_path, method: :get, local: true, class: "flex flex-wrap gap-4 items-end" do |form| %>
        <div class="flex-1 min-w-48">
          <%= form.label :start_date, "Từ ngày", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.date_field :start_date, value: @start_date, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div class="flex-1 min-w-48">
          <%= form.label :end_date, "Đến ngày", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.date_field :end_date, value: @end_date, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div class="flex gap-2">
          <%= form.submit "Xem báo cáo", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>

    <!-- Export Buttons -->
    <div class="flex gap-4 mb-6">
      <%= link_to "Xuất PDF", export_pdf_reports_path(start_date: @start_date, end_date: @end_date, format: :pdf),
          class: "px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500" %>
      <%= link_to "Xuất Excel", export_excel_reports_path(start_date: @start_date, end_date: @end_date, format: :xlsx),
          class: "px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500" %>
    </div>
  </div>

  <!-- Summary Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="p-2 bg-blue-100 rounded-lg">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Tổng chi tiêu</p>
          <p class="text-2xl font-semibold text-gray-900"><%= number_to_currency(@total_expenses, unit: "₫", precision: 0) %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="p-2 bg-green-100 rounded-lg">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Danh mục</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @expenses_by_category.count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="p-2 bg-yellow-100 rounded-lg">
          <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Thời gian</p>
          <p class="text-2xl font-semibold text-gray-900"><%= (@end_date - @start_date).to_i + 1 %> ngày</p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="p-2 bg-purple-100 rounded-lg">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">TB/ngày</p>
          <p class="text-2xl font-semibold text-gray-900">
            <%= number_to_currency(@total_expenses / [(@end_date - @start_date).to_i + 1, 1].max, unit: "₫", precision: 0) %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Category Breakdown -->
  <div class="bg-white rounded-lg shadow mb-8">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Chi tiêu theo danh mục</h2>
    </div>
    <div class="p-6">
      <% if @expenses_by_category.any? %>
        <div class="space-y-4">
          <% @expenses_by_category.each do |category, amount| %>
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="w-4 h-4 rounded-full mr-3" style="background-color: <%= category.color %>"></div>
                <span class="font-medium text-gray-900"><%= category.name %></span>
              </div>
              <div class="text-right">
                <div class="font-semibold text-gray-900"><%= number_to_currency(amount, unit: "₫", precision: 0) %></div>
                <div class="text-sm text-gray-500">
                  <%= number_to_percentage(amount / @total_expenses * 100, precision: 1) %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 text-center py-4">Không có chi tiêu trong khoảng thời gian này</p>
      <% end %>
    </div>
  </div>

  <!-- Budget Report -->
  <% if @budget_report.any? %>
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Báo cáo ngân sách</h2>
      </div>
      <div class="p-6">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Danh mục</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ngân sách</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Đã chi</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Còn lại</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">%</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Trạng thái</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @budget_report.each do |budget| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="w-3 h-3 rounded-full mr-2" style="background-color: <%= budget[:category].color %>"></div>
                      <span class="text-sm font-medium text-gray-900"><%= budget[:category].name %></span>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= number_to_currency(budget[:budget_amount], unit: "₫", precision: 0) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= number_to_currency(budget[:spent_amount], unit: "₫", precision: 0) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= number_to_currency(budget[:remaining_amount], unit: "₫", precision: 0) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= number_to_percentage(budget[:percentage_used], precision: 1) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if budget[:exceeded] %>
                      <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">Vượt quá</span>
                    <% elsif budget[:percentage_used] >= 80 %>
                      <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">Cảnh báo</span>
                    <% else %>
                      <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Tốt</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>
